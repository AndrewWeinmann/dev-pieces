{
    "name": "Node 24 TS Dev",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:dev-24-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
        "type=bind,source=${localEnv:HOME}/.ssh/agent.sock,target=/ssh-agent",
        "type=bind,source=${localEnv:HOME}/.ssh/id_ed25519_sign.pub,target=/opt/signing.pub,readonly",
        "type=bind,source=${localEnv:HOME}/.codex/auth.json,target=/home/node/.codex/auth.json,readonly"
    ],
    "remoteEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "christian-kohler.npm-intellisense",
                "christian-kohler.path-intellisense",
                "davidanson.vscode-markdownlint",
                "dbaeumer.vscode-eslint",
                "eamodio.gitlens",
                "esbenp.prettier-vscode",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "github.vscode-github-actions",
                "jasonnutter.search-node-modules",
                "mhutchie.git-graph",
                "openai.chatgpt",
                "streetsidesoftware.code-spell-checker",
                "vitest.explorer"
            ],
            "settings": {
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "explicit"
                },
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "editor.formatOnSave": true,
                "eslint.validate": [
                    "javascript",
                    "javascriptreact",
                    "typescript",
                    "typescriptreact"
                ],
                "git.inputValidation": true,
                "git.inputValidationSubjectLength": 50,
                "git.inputValidationLength": 72,
                "prettier.useEditorConfig": true
            }
        }
    },
    "postCreateCommand": "bash -lc 'bash ./.devcontainer/post-create.sh'"
}
