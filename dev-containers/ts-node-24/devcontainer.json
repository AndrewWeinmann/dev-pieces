{
    "name": "Node 24 TS Dev",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:dev-24-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
        "type=bind,source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent"
    ],
    "remoteEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code",
                "christian-kohler.npm-intellisense",
                "christian-kohler.path-intellisense",
                "davidanson.vscode-markdownlint",
                "dbaeumer.vscode-eslint",
                "eamodio.gitlens",
                "esbenp.prettier-vscode",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "github.vscode-github-actions",
                "jasonnutter.search-node-modules",
                "mhutchie.git-graph",
                "streetsidesoftware.code-spell-checker",
                "vitest.explorer"
            ],
            "settings": {
                "cSpell.words": [
                    "claude",
                    "davidanson",
                    "dbaeumer",
                    "devcontainers",
                    "eamodio",
                    "esbenp",
                    "jasonnutter",
                    "kohler",
                    "mhutchie"
                ],
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "explicit"
                },
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "editor.formatOnSave": true,
                "eslint.validate": [
                    "javascript",
                    "javascriptreact",
                    "typescript",
                    "typescriptreact"
                ],
                "git.inputValidation": true,
                "git.inputValidationSubjectLength": 50,
                "git.inputValidationLength": 72,
                "prettier.useEditorConfig": true
            }
        }
    },
    "postCreateCommand": "bash -lc 'git config --global gpg.format ssh && git config --global commit.gpgsign true && git config --global --unset user.signingkey || true && git config --global gpg.ssh.defaultKeyCommand \"ssh-add -L\"'"
}
